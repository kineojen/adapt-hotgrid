<div class="component__inner hotgrid__inner" role="region" aria-label="{{_globals._components._hotgrid.ariaRegion}}" {{#if _globals._components._hotgrid.ariaRegion}}tabindex="0"{{/if}}>
  {{> component this}}

  <div class="component__widget hotgrid__widget">
    <div class="hotgrid__widget-inner">

        {{#each _items}}
        <div class="hotgrid__item">

          <button class="btn hotgrid__item-btn {{#if _graphic.hasImageStates}}has-image-states{{else}}has-css-states{{/if}} {{#if ../_hasRoundImages}}is-round{{/if}} js-hotgrid-item-click" aria-label="{{#if _graphic.title}}{{_graphic.title}}.{{/if}}{{#if _graphic.alt}} {{_graphic.alt}}.{{/if}}{{#if _isVisited}} {{../_globals._accessibility._ariaLabels.visited}}.{{/if}}">
          
            <div class="hotgrid__item-image">
              <img class="hotgrid__item-image-normal" src="{{_graphic.src}}"/>

              {{#if _graphic.hasImageStates}}
              <img class="hotgrid__item-image-hover" src="{{_graphic.srcHover}}"/>
              <img class="hotgrid__item-image-visited" src="{{_graphic.srcVisited}}"/>
              {{/if}}
            </div>

          </button>

          {{#if _graphic.title}}
          <div class="hotgrid__item-title">
            <div class="hotgrid__item-title-inner">
              {{{_graphic.title}}}
            </div>
          </div>
          {{/if}}

        </div>
        {{/each}}

      </div>
  </div>

</div>
